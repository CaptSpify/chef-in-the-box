# Generated by Chef

# This file is commonly accessed via dict {} section in dovecot.conf

# Dictionary URI
<%= Dovecot::Conf.attribute(@conf['dict_auth'], 'uri') %>

# Key for passdb lookups
<%= Dovecot::Conf.attribute(@conf['dict_auth'], 'password_key', 'dovecot/passdb/%u') %>

# Key for userdb lookups
<%= Dovecot::Conf.attribute(@conf['dict_auth'], 'user_key', 'dovecot/userdb/%u') %>

# How to parse the value for key=value pairs. Currently we support only JSON
# format with { "key": "value", ... } object.
<%= Dovecot::Conf.attribute(@conf['dict_auth'], 'value_format', 'json') %>

# Username iteration prefix. Keys under this are assumed to contain usernames.
<%= Dovecot::Conf.attribute(@conf['dict_auth'], 'iterate_prefix', 'dovecot/userdb/') %>

# Should iteration be disabled for this userdb? If this userdb acts only as a
# cache there's no reason to try to iterate the (partial & duplicate) users.
<%= Dovecot::Conf.attribute(@conf['dict_auth'], 'iterate_disable', 'no') %>

# Default password scheme
<%= Dovecot::Conf.attribute(@conf['dict_auth'], 'default_pass_scheme', 'MD5') %>
